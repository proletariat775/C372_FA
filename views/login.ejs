<%- include('partials/header', { title: 'Login | Shirt Shop' }) %>
  <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

    <section class="page-section">
      <div class="container">
        <div class="form-card">
          <h1 class="text-center">Welcome back</h1>
          <p class="text-center text-muted mb-4">Sign in to continue shopping your favourites.</p>

          <% if (errors && errors.length) { %>
            <div class="alert alert-danger">
              <% errors.forEach(function(error) { %>
                <p class="mb-1">
                  <%= error %>
                </p>
                <% }); %>
            </div>
            <% } %>

              <% if (messages && messages.length) { %>
                <div class="alert alert-success">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-1">
                      <%= message %>
                    </p>
                    <% }); %>
                </div>
                <% } %>

                  <form action="/login" method="POST" class="mt-4">
                    <div class="mb-3">
                      <label for="email" class="form-label">Email address</label>
                      <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com"
                        required>
                    </div>
                    <div class="mb-4">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter your password" required>
                      <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" id="toggleLoginPassword" data-toggle-password
                          data-target="password">
                        <label class="form-check-label" for="toggleLoginPassword">Show password</label>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                  </form>
                  <p class="text-center text-muted mt-4 mb-0">New here? <a href="/register">Create Account</a></p>
        </div>
      </div>
    </section>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-toggle-password]').forEach(function (toggle) {
          var target = document.getElementById(toggle.dataset.target);
          if (!target) {
            return;
          }
          toggle.addEventListener('change', function () {
            target.type = toggle.checked ? 'text' : 'password';
          });
        });
      });
    </script>

    <%- include('partials/footer') %>