<% const headContent = '<link rel="stylesheet" href="/css/fit-assistant.css">'; %>
<%- include('partial/header', { title: title, headContent }) %>
<%- include('partial/navbar', { user: user }) %>
<section class="page-section fit-hero">
    <div class="container">
      <div class="hero-card fit-hero-card">
        <div class="row g-4 align-items-center">
          <div class="col-12 col-lg-7">
            <div class="hero-body">
              <span class="badge rounded-pill bg-dark-subtle text-dark">Inclusive sizing</span>
              <h1 class="mt-3">Find your perfect fit</h1>
              <p class="lead text-muted mb-4">
                Use your chest measurement to get a unisex tee size recommendation. Choose a fit preference for a closer
                or roomier cut.
              </p>
              <div class="d-flex flex-wrap gap-2">
                <span class="fit-pill">2XS - 2XL coverage</span>
                <span class="fit-pill">Benchmark size chart</span>
                <span class="fit-pill">CM with inches</span>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-5">
            <div class="fit-hero-panel">
              <h5 class="mb-3">Why it matters</h5>
              <p class="text-muted mb-0">
                Real measurements reduce sizing mistakes, improve confidence, and make post-purchase exchanges smoother.
                You're always in control of what you share.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <main class="page-section pt-0">
    <div class="container">
      <% if (errors && errors.length) { %>
        <div class="alert alert-danger">
          <strong>We need a bit more detail.</strong>
          <ul class="mb-0">
            <% errors.forEach(function(error) { %>
              <li><%= error %></li>
              <% }); %>
          </ul>
        </div>
        <% } %>

          <div class="row g-4">
            <div class="col-12 col-lg-6">
              <div class="card fit-card">
                <div class="card-body">
                  <h3 class="mb-3">Fit details</h3>
                  <p class="text-muted">Enter your chest circumference to get the most accurate size match.</p>
                  <form action="/fit-assistant" method="POST" class="row g-3">
                    <div class="col-12">
                      <label for="chestCm" class="form-label">Chest circumference (cm)</label>
                      <input type="number" class="form-control" id="chestCm" name="chestCm" step="0.1" min="1"
                        value="<%= profile.chestCm || '' %>" required>
                      <small class="text-muted">Measure around the fullest part of your chest.</small>
                    </div>
                    <div class="col-12">
                      <label for="fitPreference" class="form-label">Fit preference</label>
                      <select class="form-select" id="fitPreference" name="fitPreference">
                        <option value="regular" <%= profile.fitPreference === 'regular' ? 'selected' : '' %>>Regular</option>
                        <option value="slim" <%= profile.fitPreference === 'slim' ? 'selected' : '' %>>Slim</option>
                        <option value="oversized" <%= profile.fitPreference === 'oversized' ? 'selected' : '' %>>Oversized</option>
                      </select>
                    </div>
                    <div class="col-12 d-grid mt-2">
                      <button type="submit" class="btn btn-primary btn-lg">Get my recommendation</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <div class="col-12 col-lg-6">
              <% if (result) { %>
                <div class="card fit-card fit-result">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <span class="text-uppercase small text-muted">Recommended size</span>
                        <h2 class="display-6 fw-semibold mb-2"><%= result.recommendedSize %></h2>
                        <p class="text-muted mb-2"><%= result.explanation %></p>
                        <% if (result.adjustmentNote) { %>
                          <p class="text-muted mb-2"><%= result.adjustmentNote %></p>
                        <% } %>
                      </div>
                      <span class="badge bg-success-subtle text-success">
                        Fit: <%= result.fitPreference.charAt(0).toUpperCase() + result.fitPreference.slice(1) %>
                      </span>
                    </div>

                    <div class="fit-summary-grid mt-3">
                      <div>
                        <span class="text-uppercase small text-muted">Chest (cm)</span>
                        <p class="mb-0 fw-semibold"><%= profile.chestCm %></p>
                      </div>
                      <div>
                        <span class="text-uppercase small text-muted">Base size</span>
                        <p class="mb-0 fw-semibold"><%= result.baseSize %></p>
                      </div>
                      <div>
                        <span class="text-uppercase small text-muted">Preference</span>
                        <p class="mb-0 fw-semibold"><%= result.fitPreference %></p>
                      </div>
                    </div>
                    <p class="text-muted small mt-3 mb-0">
                      Recommendation uses general sizing benchmarks; brand cuts may differ.
                    </p>
                  </div>
                </div>
                <% } else { %>
                  <div class="card fit-card fit-placeholder">
                    <div class="card-body">
                      <h3 class="mb-3">How it works</h3>
                      <ol class="fit-steps">
                        <li>Enter your chest circumference for the most accurate sizing.</li>
                        <li>Choose your preferred fit (slim, regular, or oversized).</li>
                        <li>We recommend a size and show the full size chart.</li>
                      </ol>
                      <p class="text-muted mb-0">You can update this anytime before checkout.</p>
                    </div>
                  </div>
                  <% } %>
            </div>
          </div>

          <div class="row g-4 mt-1">
            <div class="col-12 col-lg-7">
              <div class="card fit-card">
                <div class="card-body">
                  <h4 class="mb-3">Unisex size chart (body + garment)</h4>
                  <div class="table-responsive">
                    <table class="table table-modern fit-table align-middle mb-0">
                      <thead>
                        <tr>
                          <th scope="col">Size</th>
                          <th scope="col">Body chest</th>
                          <th scope="col">Chest width</th>
                          <th scope="col">Shoulder</th>
                          <th scope="col">Length</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% (sizeChart || []).forEach(function(row) { %>
                          <tr>
                            <td class="fw-semibold"><%= row.size %></td>
                            <td><%= row.bodyChestMin %>-<%= row.bodyChestMax %> cm (<%= cmToIn(row.bodyChestMin) %>-<%= cmToIn(row.bodyChestMax) %> in)</td>
                            <td><%= row.garmentChestWidth %> cm (<%= cmToIn(row.garmentChestWidth) %> in)</td>
                            <td><%= row.garmentShoulder %> cm (<%= cmToIn(row.garmentShoulder) %> in)</td>
                            <td><%= row.garmentLength %> cm (<%= cmToIn(row.garmentLength) %> in)</td>
                          </tr>
                          <% }); %>
                      </tbody>
                    </table>
                  </div>
                  <p class="text-muted small mt-2 mb-0"><%= sizeDisclaimer %></p>
                </div>
              </div>
            </div>

            <div class="col-12 col-lg-5">
              <div class="card fit-card fit-trust">
                <div class="card-body">
                  <h4 class="mb-3">Confidence & care</h4>
                  <ul class="fit-list">
                    <li>Recommendation uses general sizing benchmarks.</li>
                    <li>Brand cuts may differ. Compare with a tee you own.</li>
                    <li>Returns are available for eligible orders.</li>
                  </ul>
                  <div class="fit-callout">
                    <strong>Need extra help?</strong>
                    <p class="mb-0">Contact support through your order history for tailored fit guidance.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  </main>

<%- include('partial/footer') %>
