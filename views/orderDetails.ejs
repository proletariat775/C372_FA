<%- include('partials/header', { title: 'Order Details | Shirt Shop' }) %>
<% const slotLabels = { '09:00-12:00': '9:00 AM - 12:00 PM', '12:00-15:00': '12:00 PM - 3:00 PM', '15:00-18:00': '3:00 PM - 6:00 PM' }; const slotWindowLabel = order && order.delivery_slot_window ? (slotLabels[order.delivery_slot_window] || order.delivery_slot_window) : null; %>
  <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

    <main class="page-section order-details-page">
      <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4 order-details-header">
          <div>
            <% const displayOrderNumber = order.order_number || order.id; %>
            <h2 class="mb-0">Order #<%= displayOrderNumber %>
            </h2>
            <p class="text-muted mb-0">
              Placed on <%= new Date(order.created_at).toLocaleString() %>
            </p>
          </div>
          <div class="d-flex flex-wrap gap-2 align-items-center order-details-actions">
            <a href="/user?tab=orders" class="btn btn-outline-secondary btn-sm">Back</a>
            <% const statusLabels = { processing: 'Processing', packing: 'Packing', ready_for_pickup: 'Ready for pickup', shipped: 'Shipped', delivered: 'Delivered', completed: 'Completed', cancelled: 'Cancelled', returned: 'Returned' }; %>
            <% const statusKey = String(order.status || 'processing').toLowerCase(); %>
            <% const statusLabel = statusLabels[statusKey] || statusKey.replace(/_/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase()); %>
            <% const paymentStatusRaw = String(order.payment_status || 'pending').toLowerCase(); %>
            <% const isRefundedOrder = ['cancelled','returned'].includes(statusKey) || paymentStatusRaw === 'refunded' || (refundRequest && String(refundRequest.status || '').toLowerCase() === 'completed'); %>
            <% const displayPaymentStatus = isRefundedOrder ? 'refunded' : paymentStatusRaw; %>
            <% const paymentLabel = displayPaymentStatus.replace(/_/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase()); %>
            <span class="badge bg-primary-subtle text-primary text-uppercase">Status: <%= isRefundedOrder ? 'Refunded' : statusLabel %></span>
            <span class="badge bg-dark-subtle text-dark text-uppercase">Payment: <%= paymentLabel %></span>
          </div>
        </div>

        <% if (messages && messages.length) { %>
          <% messages.forEach(function(message) { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
            <% }); %>
              <% } %>

                <% if (errors && errors.length) { %>
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger">
                      <%= error %>
                    </div>
                    <% }); %>
                      <% } %>

                        <div class="card shadow-sm mb-4 order-details-card">
                          <div class="card-body">
                            <div
                              class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
                              <div>
                                <h5 class="mb-2">Delivery details</h5>
                                <% if (order.shipping_address) { %>
                                  <p class="mb-1"><strong>Address:</strong>
                                    <%= order.shipping_address %>
                                  </p>
                                  <% } else { %>
                                    <p class="mb-1 text-muted">Pickup order</p>
                                    <% } %>
                                      <% if (order.delivery_slot_date && slotWindowLabel) { %>
                                        <p class="mb-1 text-muted"><strong>Delivery slot:</strong>
                                          <%= new Date(order.delivery_slot_date).toLocaleDateString() %> - <%= slotWindowLabel %>
                                        </p>
                                        <% } %>
                                          <% if (order.order_notes) { %>
                                            <p class="mb-1 text-muted"><strong>Order notes:</strong>
                                              <%= order.order_notes %>
                                            </p>
                                            <% } %>
                                      <p class="mb-0 text-muted">Payment method: <%= order.payment_method %>
                                      </p>
                              </div>
                              <div class="d-flex flex-wrap gap-2">
                                <% if (!isRefundedOrder) { %>
                                  <a href="/order/<%= order.id %>/track" class="btn btn-outline-primary">Track order</a>
                                <% } %>
                                <% if (!isRefundedOrder) { %>
                                  <a href="/order/<%= order.id %>/review"
                                    class="btn btn-outline-secondary <%= canReview ? '' : 'disabled' %>">
                                    Leave review
                                  </a>
                                <% } %>
                                <% const refundEligible = refundEligibility && refundEligibility.allowed; %>
                                <% if (refundRequest && refundRequest.id) { %>
                                  <a href="/refunds/<%= refundRequest.id %>" class="btn btn-outline-secondary">
                                    View refund details
                                  </a>
                                <% } else { %>
                                  <a href="/refunds/request/<%= order.id %>"
                                    class="btn btn-outline-dark <%= refundEligible ? '' : 'opacity-75' %>"
                                    <%= refundEligible ? '' : 'aria-disabled="true" title="Refunds are available after completion and within the refund window."' %>>
                                    Request refund
                                  </a>
                                <% } %>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="card shadow-sm mb-4 order-details-card">
                          <div class="card-body">
                            <h5 class="mb-3">Items in this order</h5>
                            <% if (items && items.length) { %>
                              <div class="table-responsive">
                                <table class="table align-middle">
                                  <thead>
                                    <tr>
                                      <th>Product</th>
                                      <th>Variant</th>
                                      <th class="text-center">Qty</th>
                                      <th class="text-end">Price</th>
                                      <th class="text-end">Total</th>
                                      <th class="text-end">Wishlist</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% items.forEach(function(item) { %>
                                      <tr class="<%= item.is_deleted ? 'table-warning' : '' %>">
                                        <td>
                                          <div class="d-flex align-items-center gap-3">
                                            <% if (item.image && !item.is_deleted) { %>
                                              <img src="/images/<%= item.image %>" alt="<%= item.productName %>"
                                                width="50" height="50" class="rounded">
                                              <% } %>
                                                <div>
                                                  <% if (item.is_deleted) { %>
                                                    <span class="text-muted">Deleted product</span>
                                                    <% } else { %>
                                                      <a href="/product/<%= item.product_id %>"
                                                        class="text-decoration-none">
                                                        <%= item.productName %>
                                                      </a>
                                                      <% } %>
                                                </div>
                                          </div>
                                        </td>
                                        <td>
                                          <span class="text-muted">
                                            <%= item.size || 'Standard' %> / <%= item.color || 'Default' %>
                                          </span>
                                        </td>
                                        <td class="text-center">
                                          <%= item.quantity %>
                                        </td>
                                        <td class="text-end">$<%= Number(item.price).toFixed(2) %>
                                        </td>
                                        <td class="text-end">$<%= Number(item.total_price || (Number(item.price) *
                                            Number(item.quantity))).toFixed(2) %>
                                        </td>
                                        <td class="text-end">
                                          <% if (!item.is_deleted && item.product_id) { %>
                                            <form action="/wishlist/<%= item.product_id %>/add" method="POST">
                                              <button type="submit"
                                                class="btn btn-sm btn-outline-secondary">Save</button>
                                            </form>
                                            <% } else { %>
                                              <span class="text-muted">N/A</span>
                                              <% } %>
                                        </td>
                                      </tr>
                                      <% }); %>
                                  </tbody>
                                </table>
                              </div>
                              <% } else { %>
                                <p class="text-muted mb-0">No items found for this order.</p>
                                <% } %>
                          </div>
                        </div>

                        <div class="row g-3">
                          <div class="col-12 col-lg-6">
                            <div class="card shadow-sm order-details-card order-summary-card">
                              <div class="card-body">
                                <h5 class="mb-3">Totals</h5>
                                <div class="d-flex justify-content-between mb-2">
                                  <span>Subtotal</span>
                                  <strong>$<%= totals.subtotal.toFixed(2) %></strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                  <span>Tax</span>
                                  <strong>$<%= totals.tax.toFixed(2) %></strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                  <span>Shipping</span>
                                  <strong>$<%= totals.shipping.toFixed(2) %></strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                  <span>Discount</span>
                                  <strong>-$<%= totals.discount.toFixed(2) %></strong>
                                </div>
                                <div class="d-flex justify-content-between border-top pt-2">
                                  <span>Total</span>
                                  <strong>$<%= totals.total.toFixed(2) %></strong>
                                </div>
                              </div>
                            </div>
                          </div>
                          <!-- Refund request status box removed per request -->
                        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
