<%- include('partials/header', { title: 'Return or Exchange | Shirt Shop' }) %>
  <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

    <main class="page-section">
      <div class="container">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
          <div>
            <p class="mb-1 text-muted">Returns & exchanges</p>
            <% const displayOrderNumber = order.order_number || order.id; %>
            <h2 class="mb-0">Order #<%= displayOrderNumber %>
            </h2>
            <p class="text-muted mb-0">Placed on <%= new Date(order.created_at).toLocaleString() %>
            </p>
          </div>
          <a href="/order/<%= order.id %>" class="btn btn-outline-primary">Back to order</a>
        </div>

        <% if (messages && messages.length) { %>
          <% messages.forEach(function(message) { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
            <% }); %>
              <% } %>

                <% if (errors && errors.length) { %>
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger">
                      <%= error %>
                    </div>
                    <% }); %>
                      <% } %>

                        <div class="row g-3">
                          <div class="col-12 col-lg-7">
                            <div class="card shadow-sm mb-4">
                              <div class="card-body">
                                <h5 class="mb-3">Request a return or exchange</h5>
                                <% if (!returnEligibility.statusEligible) { %>
                                  <div class="alert alert-warning">Returns open after an order is completed.</div>
                                  <% } %>
                                    <% if (returnEligibility.statusEligible && !returnEligibility.withinWindow) { %>
                                      <div class="alert alert-warning">
                                        The 14-day return window has passed.
                                      </div>
                                      <% } %>

                                        <form action="/return/<%= order.id %>/process" method="POST">
                                          <div class="mb-3">
                                            <label class="form-label">Request type</label>
                                            <select name="requestType" class="form-select" required>
                                              <option value="return" <%=returnRequest &&
                                                returnRequest.requestType==='return' ? 'selected' : '' %>>Return
                                              </option>
                                              <option value="exchange" <%=returnRequest &&
                                                returnRequest.requestType==='exchange' ? 'selected' : '' %>>Exchange
                                              </option>
                                            </select>
                                          </div>
                                          <div class="mb-3">
                                            <label class="form-label">Reason</label>
                                            <input type="text" name="reason" class="form-control"
                                              placeholder="Example: Size runs small"
                                              value="<%= returnRequest ? returnRequest.reason : '' %>" required>
                                          </div>
                                          <div class="mb-3">
                                            <label class="form-label">Additional notes</label>
                                            <textarea name="notes" rows="3" class="form-control"
                                              placeholder="Share any extra details"><%= returnRequest ? (returnRequest.notes || '') : '' %></textarea>
                                          </div>
                                          <button type="submit" class="btn btn-primary" <%=returnEligibility.allowed
                                            ? '' : 'disabled' %>>Submit request</button>
                                        </form>
                              </div>
                            </div>

                            <div class="card shadow-sm">
                              <div class="card-body">
                                <h5 class="mb-3">Items</h5>
                                <% if (items && items.length) { %>
                                  <ul class="list-group">
                                    <% items.forEach(function(item) { %>
                                      <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                          <%= item.productName %> (<%= item.size || 'Standard' %> / <%= item.color
                                                || 'Default' %>)
                                        </span>
                                        <span class="badge bg-light text-dark">Qty: <%= item.quantity %></span>
                                      </li>
                                      <% }); %>
                                  </ul>
                                  <% } else { %>
                                    <p class="text-muted mb-0">No items available.</p>
                                    <% } %>
                              </div>
                            </div>
                          </div>

                          <div class="col-12 col-lg-5">
                            <div class="card shadow-sm mb-4">
                              <div class="card-body">
                                <h5 class="mb-3">Current request</h5>
                                <% if (returnRequest) { %>
                                  <p class="mb-2 text-muted">Status: <strong>
                                      <%= returnRequest.status %>
                                    </strong></p>
                                  <p class="mb-2 text-muted">Type: <strong>
                                      <%= returnRequest.requestType %>
                                    </strong></p>
                                  <p class="mb-2 text-muted">Reason: <%= returnRequest.reason %>
                                  </p>
                                  <% if (returnRequest.notes) { %>
                                    <p class="mb-0 text-muted">Notes: <%= returnRequest.notes %>
                                    </p>
                                    <% } %>
                                      <% } else { %>
                                        <p class="text-muted">No request submitted yet.</p>
                                        <% } %>
                              </div>
                            </div>

                            <div class="card shadow-sm">
                              <div class="card-body">
                                <h5 class="mb-3">Status timeline</h5>
                                <div class="list-group">
                                  <% (returnTimeline || []).forEach(function(step) { %>
                                    <div
                                      class="list-group-item d-flex justify-content-between align-items-center <%= step.active ? 'list-group-item-success' : '' %>">
                                      <span>
                                        <%= step.label %>
                                      </span>
                                      <span class="badge <%= step.active ? 'bg-success' : 'bg-secondary' %>">
                                        <%= step.active ? 'Active' : 'Pending' %>
                                      </span>
                                    </div>
                                    <% }); %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
