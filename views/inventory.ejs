<%- include('partials/header', { title: 'Inventory | Shirt Shop' }) %>
  <%- include('partials/adminNavbar', { user: typeof user !=='undefined' ? user : null }) %>

    <section class="page-section">
      <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
          <div>
            <p class="mb-1 text-muted">Administrator dashboard</p>
            <h2 class="mb-0">Inventory overview</h2>
          </div>
          <div class="d-flex gap-2">
            <a href="/addProduct" class="btn btn-primary">Add new product</a>
            <a href="/admin/dashboard" class="btn btn-outline-secondary">Back to dashboard</a>
          </div>
        </div>

        <% const safeProducts = Array.isArray(products) ? products : []; %>
        <% const totalProducts = safeProducts.length; %>
        <% const lowStockCount = safeProducts.filter(p => Number(p.quantity || 0) > 0 && Number(p.quantity || 0) < 10).length; %>
        <% const outOfStockCount = safeProducts.filter(p => Number(p.quantity || 0) === 0).length; %>
        <% const discountedCount = safeProducts.filter(p => p.hasDiscount).length; %>
        <% const maxStock = safeProducts.reduce((max, p) => Math.max(max, Number(p.quantity || 0)), 0) || 1; %>

        <div class="inventory-stats">
          <div class="inventory-stat">
            <span class="inventory-stat__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 7h16" />
                <path d="M4 12h16" />
                <path d="M4 17h16" />
              </svg>
            </span>
            <div>
              <div class="inventory-stat__label">Total products</div>
              <div class="inventory-stat__value"><%= totalProducts %></div>
            </div>
          </div>
          <div class="inventory-stat">
            <span class="inventory-stat__icon inventory-stat__icon--warning" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 8v5" />
                <path d="M12 17h.01" />
                <path d="M10.3 3.6L3 17h18L13.7 3.6a2 2 0 0 0-3.4 0z" />
              </svg>
            </span>
            <div>
              <div class="inventory-stat__label">Low stock</div>
              <div class="inventory-stat__value"><%= lowStockCount %></div>
            </div>
          </div>
          <div class="inventory-stat">
            <span class="inventory-stat__icon inventory-stat__icon--danger" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="9" />
                <path d="M8 8l8 8M16 8l-8 8" />
              </svg>
            </span>
            <div>
              <div class="inventory-stat__label">Out of stock</div>
              <div class="inventory-stat__value"><%= outOfStockCount %></div>
            </div>
          </div>
          <div class="inventory-stat">
            <span class="inventory-stat__icon inventory-stat__icon--success" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 7l-8 10-4-4" />
                <path d="M4 7h4" />
              </svg>
            </span>
            <div>
              <div class="inventory-stat__label">Discounted items</div>
              <div class="inventory-stat__value"><%= discountedCount %></div>
            </div>
          </div>
        </div>

        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <form action="/inventory" method="GET" class="row g-3 align-items-end">
              <div class="col-12 col-lg-5">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" name="q" placeholder="Search product or brand"
                  value="<%= searchQuery || '' %>">
              </div>
              <div class="col-12 col-md-4 col-lg-3">
                <label class="form-label">Section</label>
                <select class="form-select" name="category">
                  <option value="">All categories</option>
                  <% (categories || []).forEach(function(cat) { %>
                    <option value="<%= cat %>" <%=activeCategory===cat ? 'selected' : '' %>><%= cat %>
                    </option>
                    <% }); %>
                </select>
              </div>
              <div class="col-12 col-md-4 col-lg-2">
                <label class="form-label">Low stock</label>
                <select class="form-select" name="lowStock">
                  <option value="0" <%=!lowStockOnly ? 'selected' : '' %>>All</option>
                  <option value="1" <%=lowStockOnly ? 'selected' : '' %>>Below 10</option>
                </select>
              </div>
              <div class="col-12 col-md-4 col-lg-2 d-grid">
                <button type="submit" class="btn btn-primary">Apply</button>
              </div>
            </form>
          </div>
        </div>

        <% if (messages && messages.length) { %>
          <% messages.forEach(function(message) { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
            <% }); %>
              <% } %>

                <% if (errors && errors.length) { %>
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger">
                      <%= error %>
                    </div>
                    <% }); %>
                      <% } %>

                        <% if (!products || !products.length) { %>
                          <div class="empty-state">
                            <h3>No products match your filters</h3>
                            <p class="text-muted">Adjust your filters or add a new product.</p>
                          </div>
                          <% } else { %>
                            <div class="d-md-none">
                              <div class="row g-4">
                                <% products.forEach(function(product) { %>
                                  <% const qty=Number(product.quantity || 0); %>
                                    <% const statusLabel=qty===0 ? 'Out of stock' : (qty < 10 ? 'Low stock' : 'In stock'
                                      ); %>
                                      <% const statusClass=qty===0 ? 'bg-danger' : (qty < 10 ? 'bg-warning text-dark'
                                        : 'bg-success' ); %>
                                        <div class="col-12">
                                          <div class="card h-100 shadow-sm">
                                            <% if (product.image) { %>
                                              <img src="/images/<%= product.image %>" class="card-img-top"
                                                alt="<%= product.productName %>">
                                              <% } else { %>
                                                <div
                                                  class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                  style="height: 180px;">
                                                  <span class="text-muted">No image</span>
                                                </div>
                                                <% } %>
                                                  <div class="card-body">
                                                    <h5 class="card-title">
                                                      <%= product.productName %>
                                                    </h5>
                                                    <p class="text-muted mb-1">Brand: <%= product.brand || 'Independent'
                                                        %>
                                                    </p>
                                                    <p class="text-muted mb-1">Section: <%= product.category
                                                        || 'General' %>
                                                    </p>
                                                    <p class="mb-1">Stock: <strong>
                                                        <%= qty %>
                                                      </strong></p>
                                                    <span class="badge <%= statusClass %>">
                                                      <%= statusLabel %>
                                                    </span>
                                                    <div class="mt-3">
                                                      <a href="/updateProduct/<%= product.id %>"
                                                        class="btn btn-outline-primary btn-sm">Edit</a>
                                                      <a href="/deleteProduct/<%= product.id %>"
                                                        class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                                    </div>
                                                  </div>
                                          </div>
                                        </div>
                                        <% }); %>
                              </div>
                            </div>

                            <div class="d-none d-md-block">
                              <div class="table-responsive">
                                <table class="table table-modern align-middle">
                                  <thead class="text-uppercase small text-muted">
                                    <tr>
                                      <th>Image</th>
                                      <th>Product</th>
                                      <th>Brand</th>
                                      <th>Section</th>
                                      <th>Price</th>
                                      <th>Stock</th>
                                      <th>Status</th>
                                      <th class="text-end">Actions</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% products.forEach(function(product) { %>
                                      <% const qty=Number(product.quantity || 0); %>
                                        <% const statusLabel=qty===0 ? 'Out of stock' : (qty < 10 ? 'Low stock'
                                          : 'In stock' ); %>
                                        <% const statusClass=qty===0 ? 'bg-danger' : (qty < 10
                                          ? 'bg-warning text-dark' : 'bg-success' ); %>
                                        <% const stockPercent = Math.min(100, Math.round((qty / maxStock) * 100)); %>
                                            <tr>
                                              <td>
                                                <% if (product.image) { %>
                                                  <img src="/images/<%= product.image %>"
                                                    alt="<%= product.productName %>" class="img-thumbnail"
                                                    style="width: 72px; height: 72px; object-fit: cover;">
                                                  <% } else { %>
                                                    <span class="text-muted">No image</span>
                                                    <% } %>
                                              </td>
                                              <td>
                                                <a href="/product/<%= product.id %>"
                                                  class="fw-semibold text-decoration-none">
                                                  <%= product.productName %>
                                                </a>
                                              </td>
                                              <td>
                                                <%= product.brand || 'Independent' %>
                                              </td>
                                              <td><span class="badge bg-dark-subtle text-dark">
                                                  <%= product.category || 'General' %>
                                                </span></td>
                                              <td>
                                                <% if (product.hasDiscount) { %>
                                                  <div class="text-muted text-decoration-line-through small">$<%=
                                                      Number(product.price).toFixed(2) %>
                                                  </div>
                                                  <div class="fw-semibold">$<%=
                                                      Number(product.effectivePrice).toFixed(2) %>
                                                  </div>
                                                  <% } else { %>
                                                    $<%= Number(product.price).toFixed(2) %>
                                                      <% } %>
                                              </td>
                                              <td>
                                                <div class="stock-value">
                                                  <span class="fw-semibold"><%= qty %></span>
                                                  <span class="text-muted small">units</span>
                                                </div>
                                                <div class="stock-meter" aria-hidden="true">
                                                  <span style="width: <%= stockPercent %>%;"></span>
                                                </div>
                                              </td>
                                              <td><span class="badge <%= statusClass %>">
                                                  <%= statusLabel %>
                                                </span></td>
                                              <td class="text-end">
                                                <div class="d-flex justify-content-end gap-2">
                                                  <a href="/updateProduct/<%= product.id %>"
                                                    class="btn btn-outline-primary btn-sm">Edit</a>
                                                  <a href="/deleteProduct/<%= product.id %>"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                                </div>
                                              </td>
                                            </tr>
                                            <% }); %>
                                  </tbody>
                                </table>
                              </div>
                            </div>
                            <% } %>
      </div>
    </section>

    <%- include('partials/footer') %>
