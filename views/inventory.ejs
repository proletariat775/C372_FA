<%- include('partials/header', { title: 'Inventory | Shirt Shop' }) %>
  <%- include('partials/adminNavbar', { user: typeof user !=='undefined' ? user : null }) %>

    <section class="page-section">
      <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
          <div>
            <p class="mb-1 text-muted">Administrator dashboard</p>
            <h2 class="mb-0">Inventory overview</h2>
          </div>
          <div class="d-flex gap-2">
            <a href="/addProduct" class="btn btn-primary">Add new product</a>
            <a href="/admin/dashboard" class="btn btn-outline-secondary">Back to dashboard</a>
          </div>
        </div>

        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <form action="/inventory" method="GET" class="row g-3 align-items-end">
              <div class="col-12 col-lg-5">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" name="q" placeholder="Search product or brand"
                  value="<%= searchQuery || '' %>">
              </div>
              <div class="col-12 col-md-4 col-lg-3">
                <label class="form-label">Section</label>
                <select class="form-select" name="category">
                  <option value="">All categories</option>
                  <% (categories || []).forEach(function(cat) { %>
                    <option value="<%= cat %>" <%=activeCategory===cat ? 'selected' : '' %>><%= cat %>
                    </option>
                    <% }); %>
                </select>
              </div>
              <div class="col-12 col-md-4 col-lg-2">
                <label class="form-label">Low stock</label>
                <select class="form-select" name="lowStock">
                  <option value="0" <%=!lowStockOnly ? 'selected' : '' %>>All</option>
                  <option value="1" <%=lowStockOnly ? 'selected' : '' %>>Below 10</option>
                </select>
              </div>
              <div class="col-12 col-md-4 col-lg-2 d-grid">
                <button type="submit" class="btn btn-primary">Apply</button>
              </div>
            </form>
          </div>
        </div>

        <% if (messages && messages.length) { %>
          <% messages.forEach(function(message) { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
            <% }); %>
              <% } %>

                <% if (errors && errors.length) { %>
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger">
                      <%= error %>
                    </div>
                    <% }); %>
                      <% } %>

                        <% if (!products || !products.length) { %>
                          <div class="empty-state">
                            <h3>No products match your filters</h3>
                            <p class="text-muted">Adjust your filters or add a new product.</p>
                          </div>
                          <% } else { %>
                            <div class="d-md-none">
                              <div class="row g-4">
                                <% products.forEach(function(product) { %>
                                  <% const qty=Number(product.quantity || 0); %>
                                    <% const statusLabel=qty===0 ? 'Out of stock' : (qty < 10 ? 'Low stock' : 'In stock'
                                      ); %>
                                      <% const statusClass=qty===0 ? 'bg-danger' : (qty < 10 ? 'bg-warning text-dark'
                                        : 'bg-success' ); %>
                                        <div class="col-12">
                                          <div class="card h-100 shadow-sm">
                                            <% if (product.image) { %>
                                              <img src="/images/<%= product.image %>" class="card-img-top"
                                                alt="<%= product.productName %>">
                                              <% } else { %>
                                                <div
                                                  class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                  style="height: 180px;">
                                                  <span class="text-muted">No image</span>
                                                </div>
                                                <% } %>
                                                  <div class="card-body">
                                                    <h5 class="card-title">
                                                      <%= product.productName %>
                                                    </h5>
                                                    <p class="text-muted mb-1">Brand: <%= product.brand || 'Independent'
                                                        %>
                                                    </p>
                                                    <p class="text-muted mb-1">Section: <%= product.category
                                                        || 'General' %>
                                                    </p>
                                                    <p class="mb-1">Stock: <strong>
                                                        <%= qty %>
                                                      </strong></p>
                                                    <span class="badge <%= statusClass %>">
                                                      <%= statusLabel %>
                                                    </span>
                                                    <div class="mt-3">
                                                      <a href="/updateProduct/<%= product.id %>"
                                                        class="btn btn-outline-primary btn-sm">Edit</a>
                                                      <a href="/deleteProduct/<%= product.id %>"
                                                        class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                                    </div>
                                                  </div>
                                          </div>
                                        </div>
                                        <% }); %>
                              </div>
                            </div>

                            <div class="d-none d-md-block">
                              <div class="table-responsive">
                                <table class="table table-modern align-middle">
                                  <thead class="text-uppercase small text-muted">
                                    <tr>
                                      <th>Image</th>
                                      <th>Product</th>
                                      <th>Brand</th>
                                      <th>Section</th>
                                      <th>Price</th>
                                      <th>Stock</th>
                                      <th>Status</th>
                                      <th class="text-end">Actions</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% products.forEach(function(product) { %>
                                      <% const qty=Number(product.quantity || 0); %>
                                        <% const statusLabel=qty===0 ? 'Out of stock' : (qty < 10 ? 'Low stock'
                                          : 'In stock' ); %>
                                          <% const statusClass=qty===0 ? 'bg-danger' : (qty < 10
                                            ? 'bg-warning text-dark' : 'bg-success' ); %>
                                            <tr>
                                              <td>
                                                <% if (product.image) { %>
                                                  <img src="/images/<%= product.image %>"
                                                    alt="<%= product.productName %>" class="img-thumbnail"
                                                    style="width: 72px; height: 72px; object-fit: cover;">
                                                  <% } else { %>
                                                    <span class="text-muted">No image</span>
                                                    <% } %>
                                              </td>
                                              <td>
                                                <a href="/product/<%= product.id %>"
                                                  class="fw-semibold text-decoration-none">
                                                  <%= product.productName %>
                                                </a>
                                              </td>
                                              <td>
                                                <%= product.brand || 'Independent' %>
                                              </td>
                                              <td><span class="badge bg-dark-subtle text-dark">
                                                  <%= product.category || 'General' %>
                                                </span></td>
                                              <td>
                                                <% if (product.hasDiscount) { %>
                                                  <div class="text-muted text-decoration-line-through small">$<%=
                                                      Number(product.price).toFixed(2) %>
                                                  </div>
                                                  <div class="fw-semibold">$<%=
                                                      Number(product.effectivePrice).toFixed(2) %>
                                                  </div>
                                                  <% } else { %>
                                                    $<%= Number(product.price).toFixed(2) %>
                                                      <% } %>
                                              </td>
                                              <td><span class="fw-semibold">
                                                  <%= qty %>
                                                </span></td>
                                              <td><span class="badge <%= statusClass %>">
                                                  <%= statusLabel %>
                                                </span></td>
                                              <td class="text-end">
                                                <div class="d-flex justify-content-end gap-2">
                                                  <a href="/updateProduct/<%= product.id %>"
                                                    class="btn btn-outline-primary btn-sm">Edit</a>
                                                  <a href="/deleteProduct/<%= product.id %>"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                                </div>
                                              </td>
                                            </tr>
                                            <% }); %>
                                  </tbody>
                                </table>
                              </div>
                            </div>
                            <% } %>
      </div>
    </section>

    <%- include('partials/footer') %>