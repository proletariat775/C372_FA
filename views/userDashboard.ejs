<%- include('partials/header', { title: 'User | Shirt Shop' }) %>
    <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

        <main class="page-section">
            <div class="container">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
                    <div>
                        <p class="mb-1 text-muted">Account</p>
                        <h2 class="mb-0">User dashboard</h2>
                    </div>
                    <a href="/user/coupons" class="btn btn-outline-secondary">View available coupons</a>
                </div>

                <% if (messages && messages.length) { %>
                    <% messages.forEach(function(message) { %>
                        <div class="alert alert-success">
                            <%= message %>
                        </div>
                        <% }); %>
                            <% } %>

                                <% if (errors && errors.length) { %>
                                    <% errors.forEach(function(error) { %>
                                        <div class="alert alert-danger">
                                            <%= error %>
                                        </div>
                                        <% }); %>
                                            <% } %>

                                                <ul class="nav nav-tabs" id="userTabs" role="tablist">
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link active" id="tab-user-info"
                                                            data-bs-toggle="tab" data-bs-target="#panel-user-info"
                                                            type="button" role="tab" aria-controls="panel-user-info"
                                                            aria-selected="true">User Info</button>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link" id="tab-purchase-history"
                                                            data-bs-toggle="tab"
                                                            data-bs-target="#panel-purchase-history" type="button"
                                                            role="tab" aria-controls="panel-purchase-history"
                                                            aria-selected="false">Purchase History</button>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link" id="tab-refunds"
                                                            data-bs-toggle="tab" data-bs-target="#panel-refunds"
                                                            type="button" role="tab" aria-controls="panel-refunds"
                                                            aria-selected="false">Refunds</button>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link" id="tab-reviews"
                                                            data-bs-toggle="tab" data-bs-target="#panel-reviews"
                                                            type="button" role="tab" aria-controls="panel-reviews"
                                                            aria-selected="false">My Reviews</button>
                                                    </li>
                                                </ul>

                                                <div class="tab-content border border-top-0 rounded-bottom p-4 bg-white"
                                                    id="userTabsContent">
                                                    <div class="tab-pane fade show active" id="panel-user-info"
                                                        role="tabpanel" aria-labelledby="tab-user-info">
                                                        <h4 class="mb-3">User Info</h4>

                                                        <% const displayName = (profile.first_name || profile.last_name)
                                                            ? `${profile.first_name || ''} ${profile.last_name || ''}`.trim()
                                                            : (profile.username || 'Member');
                                                           const initials = displayName
                                                            .split(' ')
                                                            .filter(Boolean)
                                                            .slice(0, 2)
                                                            .map(word => word[0].toUpperCase())
                                                            .join('') || (profile.username ? profile.username[0].toUpperCase() : 'U');
                                                           const memberSince = profile.created_at ? new Date(profile.created_at).toLocaleDateString() : null;
                                                           const orderCount = orders ? orders.length : 0;
                                                           const refundCount = refundRequests ? refundRequests.length : 0;
                                                           const reviewCount = userReviews ? userReviews.length : 0;
                                                           const ecoBalance = Number(profile.loyalty_points || (user && user.loyalty_points) || 0);
                                                        %>

                                                        <div class="card border-0 shadow-sm mb-4">
                                                            <div class="card-body">
                                                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                                                                    <div class="d-flex align-items-center gap-3">
                                                                        <div class="rounded-circle bg-dark-subtle text-dark d-flex align-items-center justify-content-center"
                                                                            style="width:64px;height:64px;font-weight:700;font-size:1.1rem;">
                                                                            <%= initials %>
                                                                        </div>
                                                                        <div>
                                                                            <h5 class="mb-1"><%= displayName %></h5>
                                                                            <div class="text-muted"><%= profile.email || '' %></div>
                                                                            <% if (memberSince) { %>
                                                                                <small class="text-muted">Member since <%= memberSince %></small>
                                                                            <% } %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="text-md-end">
                                                                        <div class="text-muted small">Primary contact</div>
                                                                        <div class="fw-semibold"><%= profile.phone || 'No phone saved' %></div>
                                                                        <div class="text-muted small"><%= profile.address || 'No address on file' %></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row g-3 mb-4">
                                                            <div class="col-6 col-lg-3">
                                                                <div class="card border-0 shadow-sm h-100">
                                                                    <div class="card-body">
                                                                        <div class="text-muted small">Orders</div>
                                                                        <div class="fs-4 fw-semibold"><%= orderCount %></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-6 col-lg-3">
                                                                <div class="card border-0 shadow-sm h-100">
                                                                    <div class="card-body">
                                                                        <div class="text-muted small">Refund requests</div>
                                                                        <div class="fs-4 fw-semibold"><%= refundCount %></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-6 col-lg-3">
                                                                <div class="card border-0 shadow-sm h-100">
                                                                    <div class="card-body">
                                                                        <div class="text-muted small">Reviews</div>
                                                                        <div class="fs-4 fw-semibold"><%= reviewCount %></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-6 col-lg-3">
                                                                <div class="card border-0 shadow-sm h-100">
                                                                    <div class="card-body">
                                                                        <div class="text-muted small">EcoPoints</div>
                                                                        <div class="fs-4 fw-semibold text-success"><%= ecoBalance %></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="card border-0 shadow-sm mb-4">
                                                            <div class="card-body">
                                                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-2">
                                                                    <div>
                                                                        <h5 class="mb-1">EcoPoints balance</h5>
                                                                        <p class="text-muted mb-0">Track and redeem your loyalty points.</p>
                                                                    </div>
                                                                    <span class="badge bg-success-subtle text-success fs-6">
                                                                        <%= ecoBalance %> EcoPoints
                                                                    </span>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <h6 class="text-uppercase text-muted small mb-2">How to earn EcoPoints</h6>
                                                                    <ul class="mb-0 text-muted">
                                                                        <li>Earn 1 EcoPoint for every $1 spent on paid orders.</li>
                                                                        <li>Get a bonus +50 EcoPoints for every completed order.</li>
                                                                        <li>Earn +10 EcoPoints for each product review (1 reward per item).</li>
                                                                    </ul>
                                                                    <small class="text-muted d-block mt-2">Redeem 100 EcoPoints for $5 off at checkout or on the coupons page.</small>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <form action="/user/update" method="POST" class="row g-3">
                                                            <div class="col-md-6">
                                                                <label for="username"
                                                                    class="form-label">Username</label>
                                                                <input type="text" id="username" name="username"
                                                                    class="form-control" required
                                                                    value="<%= profile.username || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="email" class="form-label">Email</label>
                                                                <input type="email" id="email" name="email"
                                                                    class="form-control" required
                                                                    value="<%= profile.email || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="first_name" class="form-label">First
                                                                    name</label>
                                                                <input type="text" id="first_name" name="first_name"
                                                                    class="form-control"
                                                                    value="<%= profile.first_name || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="last_name" class="form-label">Last
                                                                    name</label>
                                                                <input type="text" id="last_name" name="last_name"
                                                                    class="form-control"
                                                                    value="<%= profile.last_name || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="phone" class="form-label">Phone</label>
                                                                <input type="text" id="phone" name="phone"
                                                                    class="form-control" required
                                                                    value="<%= profile.phone || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="address" class="form-label">Address</label>
                                                                <input type="text" id="address" name="address"
                                                                    class="form-control"
                                                                    value="<%= profile.address || '' %>">
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="city" class="form-label">City</label>
                                                                <input type="text" id="city" name="city"
                                                                    class="form-control"
                                                                    value="<%= profile.city || '' %>">
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="state" class="form-label">State</label>
                                                                <input type="text" id="state" name="state"
                                                                    class="form-control"
                                                                    value="<%= profile.state || '' %>">
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="zip_code" class="form-label">ZIP /
                                                                    Postal</label>
                                                                <input type="text" id="zip_code" name="zip_code"
                                                                    class="form-control"
                                                                    value="<%= profile.zip_code || '' %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="country" class="form-label">Country</label>
                                                                <input type="text" id="country" name="country"
                                                                    class="form-control"
                                                                    value="<%= profile.country || '' %>">
                                                            </div>
                                                            <div class="col-12 d-flex justify-content-end">
                                                                <button type="submit" class="btn btn-primary">Save
                                                                    changes</button>
                                                            </div>
                                                        </form>
                                                    </div>

                                                    <div class="tab-pane fade" id="panel-purchase-history"
                                                        role="tabpanel" aria-labelledby="tab-purchase-history">
                                                        <h4 class="mb-3">Purchase History</h4>
                                                        <p class="text-muted">Review your past orders, delivery status,
                                                            and invoices.</p>

                                                        <% if (!orders || !orders.length) { %>
                                                            <div class="alert alert-info mb-0">No orders yet.</div>
                                                            <% } else { %>
                                                                <div class="accordion" id="user-orders">
                                                                    <% orders.forEach(function(order, index) { %>
                                                                        <div class="accordion-item">
                                                                            <h2 class="accordion-header"
                                                                                id="user-order-heading-<%= order.id %>">
                                                                                <button
                                                                                    class="accordion-button <%= index === 0 ? '' : 'collapsed' %>"
                                                                                    type="button"
                                                                                    data-bs-toggle="collapse"
                                                                                    data-bs-target="#user-order-<%= order.id %>"
                                                                                    aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
                                                                                    aria-controls="user-order-<%= order.id %>">
                                                                                    <div
                                                                                        class="w-100 d-flex flex-column flex-md-row justify-content-between gap-2">
                                                                                        <div>
                                                                                            <span
                                                                                                class="fw-semibold">Order
                                                                                                #<%= order.id %></span>
                                                                                            <span
                                                                                                class="text-muted small ms-2">
                                                                                                <%= new
                                                                                                    Date(order.created_at).toLocaleString()
                                                                                                    %>
                                                                                            </span>
                                                                                        </div>
                                                                                        <div
                                                                                            class="d-flex flex-wrap gap-2">
                                                                                            <span
                                                                                                class="badge bg-primary-subtle text-primary text-uppercase">Status:
                                                                                                <%= order.status %>
                                                                                            </span>
                                                                                            <span
                                                                                                class="badge bg-dark-subtle text-dark">Total:
                                                                                                $<%= Number(order.total).toFixed(2)
                                                                                                    %></span>
                                                                                        </div>
                                                                                    </div>
                                                                                </button>
                                                                            </h2>
                                                                            <div id="user-order-<%= order.id %>"
                                                                                class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
                                                                                aria-labelledby="user-order-heading-<%= order.id %>"
                                                                                data-bs-parent="#user-orders">
                                                                                <div class="accordion-body">
                                                                                    <% const items=orderItems[order.id]
                                                                                        || []; %>
                                                                                        <% if (items.length) { %>
                                                                                            <div
                                                                                                class="table-responsive">
                                                                                                <table
                                                                                                    class="table align-middle mb-0">
                                                                                                    <thead>
                                                                                                        <tr>
                                                                                                            <th>Product
                                                                                                            </th>
                                                                                                            <th
                                                                                                                class="text-center">
                                                                                                                Qty</th>
                                                                                                            <th
                                                                                                                class="text-end">
                                                                                                                Price
                                                                                                            </th>
                                                                                                        </tr>
                                                                                                    </thead>
                                                                                                    <tbody>
                                                                                                        <% items.forEach(function(item)
                                                                                                            { %>
                                                                                                            <tr>
                                                                                                                <td>
                                                                                                                    <%= item.productName
                                                                                                                        %>
                                                                                                                </td>
                                                                                                                <td
                                                                                                                    class="text-center">
                                                                                                                    <%= item.quantity
                                                                                                                        %>
                                                                                                                </td>
                                                                                                                <td
                                                                                                                    class="text-end">
                                                                                                                    $<%= Number(item.price).toFixed(2)
                                                                                                                        %>
                                                                                                                </td>
                                                                                                            </tr>
                                                                                                            <% }); %>
                                                                                                    </tbody>
                                                                                                </table>
                                                                                            </div>
                                                                                            <% } else { %>
                                                                                                <p
                                                                                                    class="text-muted mb-0">
                                                                                                    No items recorded
                                                                                                    for this order.</p>
                                                                                                <% } %>

                                                                                                    <div
                                                                                                        class="d-flex flex-wrap gap-2 mt-3">
                                                                                                        <a href="/order/<%= order.id %>"
                                                                                                            class="btn btn-outline-secondary btn-sm">View
                                                                                                            details</a>
                                                                                                        <a href="/orders/<%= order.id %>/invoice"
                                                                                                            class="btn btn-outline-secondary btn-sm"
                                                                                                            target="_blank"
                                                                                                            rel="noopener">Invoice</a>
                                                                                                        <a href="/order/<%= order.id %>/track"
                                                                                                            class="btn btn-outline-primary btn-sm">Track</a>
                                                                                                        <% if (user && user.role === 'customer') { %>
                                                                                                            <a href="/refunds/request/<%= order.id %>"
                                                                                                                class="btn btn-outline-warning btn-sm">Request
                                                                                                                refund</a>
                                                                                                            <button type="button"
                                                                                                                class="btn btn-outline-secondary btn-sm"
                                                                                                                data-bs-toggle="tab"
                                                                                                                data-bs-target="#panel-refunds">View
                                                                                                                refund requests</button>
                                                                                                            <% } %>
                                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <% }); %>
                                                                </div>
                                                                <% } %>
                                                    </div>

                                                    <div class="tab-pane fade" id="panel-refunds" role="tabpanel"
                                                        aria-labelledby="tab-refunds">
                                                        <h4 class="mb-3">Refund requests</h4>
                                                        <p class="text-muted">Track refund requests and view details.
                                                            Start a refund from the Purchase History tab.</p>

                                                        <% const paymentLabel = (method) => {
                                                            const value = (method || '').toString().toLowerCase();
                                                            if (value === 'paypal') return 'PayPal';
                                                            if (value === 'card') return 'Card';
                                                            return method ? method.toUpperCase() : 'Unknown';
                                                        }; %>

                                                        <% if (!refundRequests || refundRequests.length === 0) { %>
                                                            <div class="alert alert-info mb-0">No refund requests yet.
                                                            </div>
                                                            <% } else { %>
                                                                <div class="table-responsive">
                                                                    <table class="table align-middle mb-0">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Request ID</th>
                                                                                <th>Order</th>
                                                                                <th>Payment</th>
                                                                                <th>Requested Amount</th>
                                                                                <th>Status</th>
                                                                                <th>Submitted</th>
                                                                                <th></th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <% refundRequests.forEach(function(request) { %>
                                                                                <tr>
                                                                                    <td class="fw-semibold">#<%= request.id %></td>
                                                                                    <td>Order #<%= request.orderId %></td>
                                                                                    <td>
                                                                                        <span
                                                                                            class="badge bg-light text-dark border"><%= paymentLabel(request.paymentMethod) %></span>
                                                                                    </td>
                                                                                    <td>$<%= Number(request.requestedAmount || 0).toFixed(2) %></td>
                                                                                    <td>
                                                                                        <span
                                                                                            class="badge bg-light text-dark border"><%= request.status || 'UNKNOWN' %></span>
                                                                                    </td>
                                                                                    <td><%= request.createdAt ? new Date(request.createdAt).toLocaleString() : '-' %></td>
                                                                                    <td>
                                                                                        <a href="/refunds/<%= request.id %>"
                                                                                            class="btn btn-sm btn-outline-primary">View</a>
                                                                                    </td>
                                                                                </tr>
                                                                                <% }); %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                                <% } %>
                                                    </div>

                                                    <div class="tab-pane fade" id="panel-reviews" role="tabpanel"
                                                        aria-labelledby="tab-reviews">
                                                        <h4 class="mb-3">My Reviews</h4>
                                                        <p class="text-muted">See all the feedback you've shared so
                                                            far.</p>

                                                        <% if (!userReviews || userReviews.length === 0) { %>
                                                            <div class="alert alert-info mb-0">You have not submitted
                                                                any reviews yet.</div>
                                                            <% } else { %>
                                                                <div class="review-list">
                                                                    <% userReviews.forEach(function(review) { %>
                                                                        <div class="review-item">
                                                                            <div
                                                                                class="d-flex flex-column flex-md-row justify-content-between gap-2">
                                                                                <div>
                                                                                    <strong>
                                                                                        <% if (review.productId) { %>
                                                                                            <a href="/product/<%= review.productId %>"
                                                                                                class="text-decoration-none text-dark"><%= review.productName %></a>
                                                                                            <% } else { %>
                                                                                                <%= review.productName %>
                                                                                                    <% } %>
                                                                                    </strong>
                                                                                    <div class="small text-muted">
                                                                                        <% if (review.orderId) { %>
                                                                                            Order #<%= review.orderId %> -
                                                                                            <% } %>
                                                                                                <%= review.createdAt ? new Date(review.createdAt).toLocaleString() : '-' %>
                                                                                    </div>
                                                                                    <% if (review.size || review.color) { %>
                                                                                        <div class="small text-muted">
                                                                                            Variant: <%= review.size || 'Standard' %>
                                                                                            <%= review.color ? ('/ ' + review.color) : '' %>
                                                                                        </div>
                                                                                        <% } %>
                                                                                </div>
                                                                                <div class="review-stars"
                                                                                    aria-label="Rating">
                                                                                    <% for (let i=1; i<=5; i++) { %>
                                                                                        <span
                                                                                            class="star <%= i <= Number(review.rating || 0) ? 'filled' : '' %>">&#9733;</span>
                                                                                        <% } %>
                                                                                </div>
                                                                            </div>
                                                                            <p class="small text-muted mt-2 mb-0">
                                                                                <%= review.comment || 'No comments provided.' %>
                                                                            </p>
                                                                            <% if (review.orderId) { %>
                                                                                <div class="mt-2">
                                                                                    <a href="/order/<%= review.orderId %>/review"
                                                                                        class="btn btn-sm btn-outline-secondary">Edit
                                                                                        review</a>
                                                                                </div>
                                                                                <% } %>
                                                                        </div>
                                                                        <% }); %>
                                                                </div>
                                                                <% } %>
                                                    </div>

                                                </div>
            </div>
        </main>

        <%- include('partials/footer') %>
