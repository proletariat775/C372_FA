<%- include('partials/header', { title: 'Order Success | Shirt Shop' }) %>
<%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

<main class="page-section">
  <div class="container order-status-container">
    <% if (messages && messages.length) { %>
      <% messages.forEach(function(message) { %>
        <div class="alert alert-success">
          <%= message %>
        </div>
      <% }); %>
    <% } %>

    <% if (errors && errors.length) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% }); %>
    <% } %>

    <% const paymentLabel = (method) => {
      const value = (method || '').toString().toLowerCase();
      if (value === 'paypal') return 'PayPal';
      if (value === 'stripe') return 'Stripe';
      return method ? method.toUpperCase() : 'Payment';
    }; %>

    <div class="order-status-card">
      <div class="order-status__icon order-status__icon--success" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round"
          stroke-linejoin="round">
          <path d="M20 7l-8.5 9L4 10" />
        </svg>
      </div>
      <h2 class="order-status__title">Order Successfully Placed!</h2>
      <p class="text-muted mb-4">Order #<%= order.order_number || order.id %></p>

      <div class="order-status__grid">
        <div class="order-status__main">
          <div class="order-summary-card">
            <div class="order-summary-card__header">
              <h5 class="mb-0">Order summary</h5>
              <span class="badge bg-success-subtle text-success">Paid via <%= paymentLabel(order.payment_method) %></span>
            </div>
            <div class="order-summary-card__items">
              <% if (items && items.length) { %>
                <% items.forEach(function(item) { %>
                  <div class="order-summary-item">
                    <div class="order-summary-item__left">
                      <% if (item.image && !item.is_deleted) { %>
                        <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="order-summary-item__img">
                      <% } else { %>
                        <div class="order-summary-item__img order-summary-item__img--placeholder">
                          <span>No image</span>
                        </div>
                      <% } %>
                      <div>
                        <div class="order-summary-item__name"><%= item.productName %></div>
                        <div class="text-muted small">Qty <%= item.quantity %></div>
                      </div>
                    </div>
                    <div class="order-summary-item__price">$<%= Number(item.price).toFixed(2) %></div>
                  </div>
                <% }); %>
              <% } else { %>
                <p class="text-muted mb-0">No items recorded for this order.</p>
              <% } %>
            </div>
            <div class="order-summary-card__totals">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Subtotal</span>
                <span>$<%= Number(totals.subtotal || 0).toFixed(2) %></span>
              </div>
              <% if (Number(totals.discount || 0) > 0) { %>
                <div class="d-flex justify-content-between text-success">
                  <span>Discounts</span>
                  <span>- $<%= Number(totals.discount || 0).toFixed(2) %></span>
                </div>
              <% } %>
              <% if (Number(totals.delivery || 0) > 0) { %>
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Delivery</span>
                  <span>$<%= Number(totals.delivery || 0).toFixed(2) %></span>
                </div>
              <% } %>
              <div class="d-flex justify-content-between fw-semibold mt-2">
                <span>Total</span>
                <span>$<%= Number(totals.total || 0).toFixed(2) %></span>
              </div>
            </div>
          </div>

          <div class="impact-summary mt-3">
            <h5 class="mb-2">Estimated impact of your order</h5>
            <div class="impact-summary__list">
              <div class="impact-item">
                <span class="impact-icon" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                    stroke-linejoin="round">
                    <path d="M12 3c3.5 4.5 6 7.6 6 11a6 6 0 1 1-12 0c0-3.4 2.5-6.5 6-11z" />
                  </svg>
                </span>
                <span>Water saved: <strong><%= impactSummary.waterSavedLitres %></strong> L</span>
              </div>
              <div class="impact-item">
                <span class="impact-icon" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                    stroke-linejoin="round">
                    <path d="M5 13c4-6 11-8 14-8-1 5-4 12-11 14-3 1-5-1-3-6z" />
                    <path d="M9 13c2 2 4 3 6 3" />
                  </svg>
                </span>
                <span>Textile waste reduced: <strong><%= Number(impactSummary.textileWasteReducedKg || 0).toFixed(1) %></strong> kg</span>
              </div>
              <div class="impact-item">
                <span class="impact-icon" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                    stroke-linejoin="round">
                    <circle cx="12" cy="12" r="9" />
                    <path d="M3 12h18" />
                    <path d="M12 3c3 3 3 15 0 18" />
                  </svg>
                </span>
                <span>CO2 emissions reduced: <strong><%= Number(impactSummary.carbonReducedKg || 0).toFixed(1) %></strong> kg</span>
              </div>
            </div>
            <small class="text-muted d-block mt-2">Estimated using industry benchmark averages.</small>
          </div>
        </div>

        <div class="order-status__side">
          <div class="order-ecopoints-card">
            <span class="order-ecopoints-card__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                stroke-linejoin="round">
                <path d="M12 3c3.5 2.5 6 5.6 6 9a6 6 0 1 1-12 0c0-3.4 2.5-6.5 6-9z" />
                <path d="M9 14c1.2 1.5 3 2.5 5 2.5" />
              </svg>
            </span>
            <div>
              <div class="text-muted small">You earned</div>
              <div class="order-ecopoints-card__value"><%= Number(earnedPoints || 0) %> EcoPoints</div>
              <% if (Number(redeemedPoints || 0) > 0) { %>
                <div class="small text-muted">Redeemed <%= Number(redeemedPoints || 0) %> EcoPoints</div>
              <% } %>
            </div>
          </div>
          <div class="d-grid gap-2 mt-3">
            <a href="/shopping" class="btn btn-success">Continue Shopping</a>
            <a href="/order/<%= order.id %>" class="btn btn-outline-secondary">View order details</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
