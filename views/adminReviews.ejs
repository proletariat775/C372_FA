<%- include('partials/header', { title: 'Review Management | Shirt Shop' }) %>
<%- include('partials/adminNavbar', { user: typeof user !== 'undefined' ? user : null }) %>

<section class="page-section">
  <div class="container">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
      <div>
        <p class="mb-1 text-muted">Administrator dashboard</p>
        <h2 class="mb-0">Review management</h2>
      </div>
    </div>

    <% if (messages && messages.length) { %>
      <% messages.forEach(function(message) { %>
        <div class="alert alert-success"><%= message %></div>
      <% }); %>
    <% } %>

    <% if (errors && errors.length) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% }); %>
    <% } %>

    <% if (!reviews || reviews.length === 0) { %>
      <div class="empty-state">
        <h3>No reviews yet</h3>
        <p class="text-muted">Customer reviews will appear here for moderation and replies.</p>
      </div>
    <% } else { %>
      <div class="row g-3">
        <% reviews.forEach(function(review) { %>
          <div class="col-12 col-xl-6">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2 mb-3">
                  <div>
                    <div class="fw-semibold"><%= review.product_name || 'Product' %></div>
                    <div class="small text-muted">
                      Order #<%= review.order_number || review.order_id || 'N/A' %> â€¢ <%= review.username || review.email || 'Customer' %>
                    </div>
                  </div>
                  <span class="badge bg-dark-subtle text-dark"><%= Number(review.rating || 0) %> / 5</span>
                </div>

                <div class="mb-3">
                  <div class="small text-muted">Customer review</div>
                  <div><%= review.comment || 'No comment provided.' %></div>
                </div>

                <% if (review.admin_reply) { %>
                  <div class="mb-3">
                    <div class="small text-muted">Admin reply</div>
                    <div class="fw-semibold"><%= review.admin_reply %></div>
                    <div class="small text-muted mt-1">
                      <%= review.admin_reply_at ? new Date(review.admin_reply_at).toLocaleString() : '' %>
                    </div>
                  </div>
                <% } %>

                <form action="/admin/reviews/<%= review.id %>/reply" method="POST" class="mt-3">
                  <label class="form-label">Reply to customer</label>
                  <textarea name="reply" rows="3" class="form-control" placeholder="Write a helpful response..." required><%= review.admin_reply || '' %></textarea>
                  <div class="d-flex justify-content-end mt-2">
                    <button type="submit" class="btn btn-primary btn-sm">Save reply</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
