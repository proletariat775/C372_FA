<%- include('partials/header', { title: 'Purchase History | Shirt Shop' }) %>
<% const slotLabels = { '09:00-12:00': '9:00 AM - 12:00 PM', '12:00-15:00': '12:00 PM - 3:00 PM', '15:00-18:00': '3:00 PM - 6:00 PM' }; %>
  <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

    <main class="page-section">
      <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
          <div>
            <p class="mb-1 text-muted">Your account</p>
            <h2 class="mb-0">
              <%= user && user.role==='admin' ? 'All orders' : 'Purchase history' %>
            </h2>
          </div>
          <a href="<%= user && user.role === 'admin' ? '/inventory' : '/shopping' %>" class="btn btn-primary">
            <%= user && user.role==='admin' ? 'Back to admin' : 'Continue shopping' %>
          </a>
        </div>

        <% if (messages && messages.length) { %>
          <% messages.forEach(function(message) { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
            <% }); %>
              <% } %>

                <% if (errors && errors.length) { %>
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger">
                      <%= error %>
                    </div>
                    <% }); %>
                      <% } %>

                        <% if (!orders || orders.length===0) { %>
                          <div class="empty-state">
                            <h3>No purchases yet</h3>
                            <p class="text-muted">Browse the catalogue and start building your basket.</p>
                            <a href="/shopping" class="btn btn-primary">Discover products</a>
                          </div>
                          <% } else { %>
                            <div class="accordion" id="order-history">
                              <% orders.forEach(function(order, index) { %>
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="heading-<%= order.id %>">
                                    <button class="accordion-button <%= index === 0 ? '' : 'collapsed' %>" type="button"
                                      data-bs-toggle="collapse" data-bs-target="#order-<%= order.id %>"
                                      aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
                                      aria-controls="order-<%= order.id %>">
                                      <% const statusKey=(order.status || 'pending' ).toLowerCase(); %>
                                        <% const statusLabel=statusKey.charAt(0).toUpperCase() + statusKey.slice(1); %>
                                          <% const statusClasses={ pending: 'badge-status--pending' ,
                                            processing: 'badge-status--packed' , packed: 'badge-status--packed' ,
                                            shipped: 'badge-status--shipped' , delivered: 'badge-status--delivered' ,
                                            completed: 'badge-status--completed' , cancelled: 'badge-status--cancelled'
                                            , returned: 'badge-status--cancelled' }; %>
                                            <span class="me-3 fw-semibold">Order #<%= order.id %></span>
                                            <small class="text-muted me-auto">
                                              <%= new Date(order.created_at).toLocaleString() %>
                                            </small>
                                            <% if (user && user.role==='admin' && order.username) { %>
                                              <span class="badge bg-dark-subtle text-dark me-2">Customer: <%=
                                                  order.username %>
                                              </span>
                                              <% } %>
                                                <span
                                                  class="badge badge-status <%= statusClasses[statusKey] || 'badge-status--pending' %> me-2">Status:
                                                  <%= statusLabel %></span>
                                                <span class="badge bg-primary-subtle text-primary">Total: $<%=
                                                    Number(order.total).toFixed(2) %></span>
                                    </button>
                                  </h2>
                                  <div id="order-<%= order.id %>"
                                    class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
                                    aria-labelledby="heading-<%= order.id %>" data-bs-parent="#order-history">
                                    <div class="accordion-body">
                                      <% const items=orderItems[order.id] || []; %>
                                      <% const slotWindowLabel = order && order.delivery_slot_window ? (slotLabels[order.delivery_slot_window] || order.delivery_slot_window) : null; %>
                                        <% if (items.length) { %>
                                          <div class="table-responsive">
                                            <table class="table align-middle">
                                              <thead>
                                                <tr>
                                                  <th scope="col">Product</th>
                                                  <th scope="col" class="text-center">Quantity</th>
                                                  <th scope="col" class="text-end">Price</th>
                                                  <th scope="col" class="text-end">Subtotal</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                                <% items.forEach(function(item) { %>
                                                  <% const itemDeleted=item.is_deleted===1 ||
                                                    item.productName==='Deleted product' ; %>
                                                    <tr class="<%= itemDeleted ? 'table-warning' : '' %>">
                                                      <td>
                                                        <div class="d-flex align-items-center gap-3">
                                                          <% if (item.image && !itemDeleted) { %>
                                                            <img src="/images/<%= item.image %>"
                                                              alt="<%= item.productName %>" width="50" height="50"
                                                              class="rounded">
                                                            <% } %>
                                                              <div>
                                                                <% if (itemDeleted) { %>
                                                                  <span class="text-muted">Deleted product</span>
                                                                  <% } else { %>
                                                                    <a href="/product/<%= item.product_id %>"
                                                                      class="text-decoration-none">
                                                                      <%= item.productName %>
                                                                    </a>
                                                                    <% } %>
                                                              </div>
                                                        </div>
                                                      </td>
                                                      <td class="text-center">
                                                        <%= item.quantity %>
                                                      </td>
                                                      <td class="text-end">$<%= Number(item.price).toFixed(2) %>
                                                      </td>
                                                      <td class="text-end">$<%= (Number(item.price) *
                                                          Number(item.quantity)).toFixed(2) %>
                                                      </td>
                                                    </tr>
                                                    <% }); %>
                                              </tbody>
                                            </table>
                                          </div>
                                          <% } else { %>
                                            <p class="text-muted mb-0">No items found for this order.</p>
                                            <% } %>

                                              <% if (user && user.role==='customer' ) { %>
                                                <div class="mt-4">
                                                  <h5 class="mb-2">Reviews</h5>
                                                  <% const reviewStatusKey=(order.status || 'pending' ).toLowerCase();
                                                    %>
                                                    <% if (reviewStatusKey !=='completed' ) { %>
                                                      <p class="text-muted mb-0">Reviews are available after order is
                                                        completed.</p>
                                                      <% } else if (!items.length) { %>
                                                        <p class="text-muted mb-0">No reviewable items for this order.
                                                        </p>
                                                        <% } else { %>
                                                          <% items.forEach(function(item) { %>
                                                            <% const itemDeleted=item.is_deleted===1 ||
                                                              item.productName==='Deleted product' ; %>
                                                              <div class="border rounded-3 p-3 mb-3">
                                                                <div
                                                                  class="d-flex flex-column flex-md-row justify-content-between gap-2">
                                                                  <div>
                                                                    <div class="fw-semibold">
                                                                      <%= item.productName %>
                                                                    </div>
                                                                    <div class="text-muted small">Size: <%= item.size
                                                                        || 'N/A' %> | Qty: <%= item.quantity %>
                                                                    </div>
                                                                  </div>
                                                                  <% if (item.review) { %>
                                                                    <div class="text-md-end">
                                                                      <span
                                                                        class="badge bg-success-subtle text-success">Reviewed</span>
                                                                      <div class="small text-muted mt-1">Rating: <%=
                                                                          item.review.rating %> / 5</div>
                                                                    </div>
                                                                    <% } %>
                                                                </div>
                                                                <% if (item.review) { %>
                                                                  <% if (item.review.comment) { %>
                                                                    <p class="small text-muted mt-2 mb-0">
                                                                      <%= item.review.comment %>
                                                                    </p>
                                                                    <% } %>
                                                                      <% } else if (itemDeleted || !item.product_id) {
                                                                        %>
                                                                        <p class="small text-muted mt-2 mb-0">This item
                                                                          is no longer available for review.</p>
                                                                        <% } else { %>
                                                                          <form action="/reviews" method="POST"
                                                                            class="row g-2 align-items-end mt-2">
                                                                            <input type="hidden" name="orderItemId"
                                                                              value="<%= item.id %>">
                                                                            <div class="col-12 col-md-4">
                                                                              <label
                                                                                class="form-label d-block">Rating</label>
                                                                              <div class="star-rating"
                                                                                aria-label="Select rating">
                                                                                <% for (let score=5; score>= 1; score--)
                                                                                  { %>
                                                                                  <input type="radio"
                                                                                    id="rating-<%= item.id %>-<%= score %>"
                                                                                    name="rating" value="<%= score %>"
                                                                                    required>
                                                                                  <label
                                                                                    for="rating-<%= item.id %>-<%= score %>"
                                                                                    title="<%= score %> star<%= score > 1 ? 's' : '' %>">&#9733;</label>
                                                                                  <% } %>
                                                                              </div>
                                                                            </div>
                                                                            <div class="col-12 col-md-6">
                                                                              <label class="form-label">Comment
                                                                                (optional)</label>
                                                                              <textarea class="form-control"
                                                                                name="comment" rows="2" maxlength="1000"
                                                                                placeholder="Share your thoughts"></textarea>
                                                                            </div>
                                                                            <div class="col-12 col-md-2 d-grid">
                                                                              <button type="submit"
                                                                                class="btn btn-outline-primary">Submit</button>
                                                                            </div>
                                                                          </form>
                                                                          <% } %>
                                                              </div>
                                                              <% }); %>
                                                                <% } %>
                                                </div>
                                                <% } %>

                                                  <div class="card mt-3">
                                                    <div class="card-body">
                                                      <div
                                                        class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
                                                        <div>
                                                          <h5 class="mb-1">Delivery details</h5>
                                                          <span
                                                            class="badge <%= order.delivery_method === 'delivery' ? 'bg-primary-subtle text-primary' : 'bg-light text-dark' %> text-uppercase">
                                                            <%= order.delivery_method==='delivery' ? 'Delivery'
                                                              : 'Pickup' %>
                                                          </span>
                                                          <% if (user && user.role==='admin' && order.email) { %>
                                                            <div class="small text-muted mt-1">
                                                              <%= order.email %> | <%= order.phone || 'No phone' %>
                                                            </div>
                                                            <% } %>
                                                        </div>
                                                        <div
                                                          class="d-flex flex-column flex-md-row align-items-md-center gap-3">
                                                          <div class="text-md-end small text-muted">
                                                            <% if (order.delivery_method==='delivery' ) { %>
                                                              Fee: <%= Number(order.delivery_fee || 0)> 0 ? '$' +
                                                                Number(order.delivery_fee).toFixed(2) : 'Free' %>
                                                                <% } else { %>
                                                                  No delivery fee.
                                                                  <% } %>
                                                          </div>
                                                          <a href="/orders/<%= order.id %>/invoice" target="_blank"
                                                            rel="noopener" class="btn btn-outline-secondary btn-sm">
                                                            View invoice
                                                          </a>
                                                        </div>
                                                      </div>

                                                      <% if (order.delivery_method==='delivery' ) { %>
                                                        <p class="text-muted mb-3">
                                                          <strong>Address:</strong>
                                                          <%= order.delivery_address ? order.delivery_address
                                                            : 'Pending confirmation' %>
                                                        </p>
                                                        <% if (order.delivery_slot_date && slotWindowLabel) { %>
                                                          <p class="text-muted mb-3">
                                                            <strong>Delivery slot:</strong>
                                                            <%= new Date(order.delivery_slot_date).toLocaleDateString() %> - <%= slotWindowLabel %>
                                                          </p>
                                                          <% } %>
                                                        <% } else { %>
                                                          <p class="text-muted mb-3">We will notify you once your pickup
                                                            is
                                                            ready.</p>
                                                          <% } %>
                                                            <% if (order.order_notes) { %>
                                                              <p class="text-muted mb-3">
                                                                <strong>Order notes:</strong>
                                                                <%= order.order_notes %>
                                                              </p>
                                                              <% } %>

                                                            <form action="/orders/<%= order.id %>/delivery"
                                                              method="POST" class="row gy-3">
                                                              <div class="col-12 col-md-4">
                                                                <label class="form-label">Update method</label>
                                                                <select name="deliveryMethod" class="form-select">
                                                                  <option value="pickup"
                                                                    <%=order.delivery_method==='pickup' ? 'selected'
                                                                    : '' %>>Pickup</option>
                                                                  <option value="delivery"
                                                                    <%=order.delivery_method==='delivery' ? 'selected'
                                                                    : '' %>
                                                                    >Delivery</option>
                                                                </select>
                                                              </div>
                                                              <div class="col-12 col-md-8">
                                                                <label for="order-address-<%= order.id %>"
                                                                  class="form-label">Delivery address</label>
                                                                <textarea id="order-address-<%= order.id %>"
                                                                  name="deliveryAddress" rows="2" class="form-control"
                                                                  placeholder="Provide address for delivery"><%= order.delivery_address || user.address || '' %></textarea>
                                                                <small class="text-muted">Required if delivery is
                                                                  selected.
                                                                  Pickup orders can leave this blank.</small>
                                                              </div>
                                                              <div class="col-12 d-flex justify-content-end">
                                                                <button type="submit"
                                                                  class="btn btn-outline-primary btn-sm">Save delivery
                                                                  changes</button>
                                                              </div>
                                                            </form>
                                                    </div>
                                                  </div>
                                    </div>
                                  </div>
                                </div>
                                <% }); %>
                            </div>
                            <% } %>

                              <% if (bestSellers && bestSellers.length) { %>
                                <div class="mt-5">
                                  <span class="text-uppercase small text-muted">You might also like</span>
                                  <h3 class="mt-2">Popular with other shoppers</h3>
                                  <div class="row g-3 mt-3">
                                    <% bestSellers.forEach(function(item) { %>
                                      <div class="col-12 col-md-6 col-lg-4 col-xxl-3">
                                        <div class="card h-100 border-0 shadow-sm">
                                          <% if (item.image) { %>
                                            <img src="/images/<%= item.image %>" class="card-img-top"
                                              alt="<%= item.productName %>">
                                            <% } else { %>
                                              <div
                                                class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                style="height: 180px;">
                                                <span class="text-muted">Image coming soon</span>
                                              </div>
                                              <% } %>
                                                <div class="card-body">
                                                  <h5 class="card-title"><a href="/product/<%= item.id %>"
                                                      class="text-decoration-none text-dark">
                                                      <%= item.productName %>
                                                    </a></h5>
                                                  <p class="mb-2 text-muted">Sold <strong>
                                                      <%= item.totalSold %>
                                                    </strong> times</p>
                                                  <% if (item.hasDiscount) { %>
                                                    <div class="d-flex flex-column mb-2">
                                                      <span class="text-muted text-decoration-line-through small">$<%=
                                                          Number(item.price).toFixed(2) %></span>
                                                      <span class="fw-semibold text-success">$<%=
                                                          Number(item.effectivePrice).toFixed(2) %></span>
                                                      <span
                                                        class="badge bg-success-subtle text-success align-self-start mt-1">
                                                        <%= Number(item.discountPercentage).toFixed(2) %>% off
                                                      </span>
                                                    </div>
                                                    <% } else { %>
                                                      <div class="fw-semibold mb-2">$<%= Number(item.price).toFixed(2)
                                                          %>
                                                      </div>
                                                      <% } %>
                                                        <% if (item.offerMessage) { %>
                                                          <p class="text-muted small mb-2">
                                                            <%= item.offerMessage %>
                                                          </p>
                                                          <% } %>
                                                            <a href="/product/<%= item.id %>"
                                                              class="btn btn-outline-primary btn-sm">Shop now</a>
                                                </div>
                                        </div>
                                      </div>
                                      <% }); %>
                                  </div>
                                </div>
                                <% } %>
      </div>
    </main>
    <%- include('partials/footer') %>
