<%- include('partials/header', { title: 'Refund Request | Shirt Shop' }) %>
<%- include('partials/navbar', { user: typeof user !== 'undefined' ? user : null }) %>

<main class="page-section">
  <div class="container">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
      <div>
        <p class="mb-1 text-muted">Request #<%= request.id %></p>
        <h2 class="mb-0">Refund request details</h2>
      </div>
      <a href="/user?tab=returns" class="btn btn-outline-secondary">Back to requests</a>
    </div>

    <% const paymentLabel = (method) => {
      const value = (method || '').toString().toLowerCase();
      if (value === 'paypal') return 'PayPal';
      if (value === 'stripe') return 'Stripe';
      if (value === 'netsqr') return 'NETS QR';
      return method ? method.toUpperCase() : 'Unknown';
    }; %>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="small text-muted">Order</div>
            <div class="fw-semibold">Order #<%= request.orderNumber || request.orderId %></div>
            <% if (order) { %>
              <% const orderStatus = String(order.status || 'processing').toLowerCase(); %>
              <% const paymentStatus = String(order.payment_status || 'pending').toLowerCase(); %>
              <div class="small text-muted mt-2">Order status</div>
              <div>
                <span class="badge bg-primary-subtle text-primary text-uppercase"><%= orderStatus.replace(/_/g, ' ') %></span>
                <span class="badge bg-dark-subtle text-dark text-uppercase">Payment: <%= paymentStatus %></span>
              </div>
            <% } %>
            <div class="small text-muted mt-2">Payment method</div>
            <div><span class="badge bg-light text-dark border"><%= paymentLabel(request.paymentMethod) %></span></div>
            <div class="small text-muted mt-2">Requested on</div>
            <div><%= request.createdAt ? new Date(request.createdAt).toLocaleString() : '-' %></div>
          </div>
          <div class="col-md-6">
            <div class="small text-muted">Requested amount</div>
            <div class="fw-semibold">$<%= Number(request.requestedAmount || 0).toFixed(2) %></div>
            <div class="small text-muted mt-2">Approved amount</div>
            <div><%= request.approvedAmount ? '$' + Number(request.approvedAmount || 0).toFixed(2) : '-' %></div>
            <div class="small text-muted mt-2">Status</div>
            <div><span class="badge bg-light text-dark border"><%= (request.status || 'unknown').toUpperCase() %></span></div>
            <div class="small text-muted mt-2">Refunded on</div>
            <div><%= request.refundedAt ? new Date(request.refundedAt).toLocaleString() : (request.status === 'completed' ? (request.updatedAt ? new Date(request.updatedAt).toLocaleString() : '-') : '-') %></div>
          </div>
          <% if (request.reason) { %>
            <div class="col-12">
              <div class="small text-muted">Reason</div>
              <div><%= request.reason %></div>
            </div>
          <% } %>
          <% if (request.adminNote) { %>
            <div class="col-12">
              <div class="small text-muted">Admin note</div>
              <div><%= request.adminNote %></div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <% if (order && orderItems && orderItems.length) { %>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title">Order summary</h5>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Item</th>
                  <th class="text-center">Qty</th>
                  <th class="text-end">Unit price</th>
                  <th class="text-end">Line total</th>
                </tr>
              </thead>
              <tbody>
                <% orderItems.forEach(function(item) { %>
                  <tr>
                    <td><%= item.productName || ('Product #' + item.product_id) %></td>
                    <td class="text-center"><%= item.quantity %></td>
                    <td class="text-end">$<%= Number(item.price || 0).toFixed(2) %></td>
                    <td class="text-end">$<%= Number(item.total_price || (Number(item.price || 0) * Number(item.quantity || 0))).toFixed(2) %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="d-flex justify-content-between border-top pt-3 mt-3">
            <span class="text-muted">Order total</span>
            <span class="fw-semibold">$<%= Number(order.total_amount || order.total || 0).toFixed(2) %></span>
          </div>
        </div>
      </div>
    <% } %>

    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Refund items</h5>
        <% if (!items || items.length === 0) { %>
          <p class="text-muted">No items selected for refund.</p>
        <% } else { %>
          <div class="table-responsive mb-4">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Item</th>
                  <th class="text-center">Qty</th>
                  <th class="text-end">Unit price</th>
                  <th class="text-end">Line refund</th>
                </tr>
              </thead>
              <tbody>
                <% items.forEach(function(item) { %>
                  <tr>
                    <td><%= item.productName || ('Product #' + item.productId) %></td>
                    <td class="text-center"><%= item.quantity %></td>
                    <td class="text-end">$<%= Number(item.unitPrice).toFixed(2) %></td>
                    <td class="text-end">$<%= Number(item.lineRefundAmount || (Number(item.unitPrice) * Number(item.quantity))).toFixed(2) %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <h5 class="card-title">Refund processing</h5>
        <% if (!refunds || refunds.length === 0) { %>
          <p class="text-muted mb-0">No refund transactions recorded yet.</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Refund ID</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Created</th>
                </tr>
              </thead>
              <tbody>
                <% refunds.forEach(function(refund) { %>
                  <tr>
                    <td>#<%= refund.id %></td>
                    <td>$<%= Number(refund.amount || 0).toFixed(2) %> <%= refund.currency || '' %></td>
                    <td><span class="badge bg-light text-dark border"><%= refund.status || 'UNKNOWN' %></span></td>
                    <td><%= refund.createdAt ? new Date(refund.createdAt).toLocaleString() : '-' %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
