<%- include('partials/header', { title: 'Deliveries | Shirt Shop' }) %>
  <%- include('partials/adminNavbar', { user: typeof user !=='undefined' ? user : null }) %>
    <% const statusClasses={ pending: 'bg-warning-subtle text-warning' , processing: 'bg-info-subtle text-info' ,
      shipped: 'bg-primary-subtle text-primary' , delivered: 'bg-success-subtle text-success' ,
      completed: 'bg-success-subtle text-success' , refunded: 'bg-info-subtle text-info' ,
      cancelled: 'bg-danger-subtle text-danger' , returned: 'bg-secondary-subtle text-secondary' }; %>

      <section class="page-section">
        <div class="container">
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <div>
              <p class="mb-1 text-muted">Administrator dashboard</p>
              <h2 class="mb-0">Order management</h2>
            </div>
            <span class="badge bg-light text-dark px-3 py-2">Orders: <strong>
                <%= orders ? orders.length : 0 %>
              </strong></span>
          </div>

          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <form action="/admin/deliveries" method="GET" class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                  <label class="form-label">Status</label>
                  <select class="form-select" name="status">
                    <option value="all" <%=(!filters || filters.status==='all' ) ? 'selected' : '' %>>All statuses
                    </option>
                    <% (statusOptions || []).forEach(function(status) { %>
                      <option value="<%= status %>" <%=filters && filters.status===status ? 'selected' : '' %>><%=
                          status %>
                      </option>
                      <% }); %>
                  </select>
                </div>
                <div class="col-12 col-md-3">
                  <label class="form-label">Delivery method</label>
                  <select class="form-select" name="method">
                    <option value="all" <%=(!filters || filters.method==='all' ) ? 'selected' : '' %>>All methods
                    </option>
                    <option value="pickup" <%=filters && filters.method==='pickup' ? 'selected' : '' %>>Pickup</option>
                    <option value="delivery" <%=filters && filters.method==='delivery' ? 'selected' : '' %>>Delivery
                    </option>
                  </select>
                </div>
                <div class="col-12 col-md-4">
                  <label class="form-label">Search</label>
                  <input type="text" class="form-control" name="search" placeholder="Order ID or customer"
                    value="<%= filters && filters.search ? filters.search : '' %>">
                </div>
                <div class="col-12 col-md-2 d-grid">
                  <button type="submit" class="btn btn-primary">Apply filters</button>
                </div>
                <% if (filters && filters.userId) { %>
                  <input type="hidden" name="userId" value="<%= filters.userId %>">
                  <% } %>
              </form>
            </div>
          </div>

          <% if (messages && messages.length) { %>
            <% messages.forEach(function(message) { %>
              <div class="alert alert-success">
                <%= message %>
              </div>
              <% }); %>
                <% } %>

                  <% if (errors && errors.length) { %>
                    <% errors.forEach(function(error) { %>
                      <div class="alert alert-danger">
                        <%= error %>
                      </div>
                      <% }); %>
                        <% } %>

                          <% if (!orders || !orders.length) { %>
                            <div class="empty-state">
                              <h3>No orders found</h3>
                              <p class="text-muted">Try adjusting your filters or check back later.</p>
                            </div>
                            <% } else { %>
                              <div class="accordion" id="admin-orders">
                                <% orders.forEach(function(order, index) { %>
                                  <% const isCompleted=['completed', 'refunded'].includes(order.status); %>
                                    <div class="accordion-item">
                                      <h2 class="accordion-header" id="order-heading-<%= order.id %>">
                                        <button class="accordion-button <%= index === 0 ? '' : 'collapsed' %>"
                                          type="button" data-bs-toggle="collapse"
                                          data-bs-target="#order-<%= order.id %>"
                                          aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
                                          aria-controls="order-<%= order.id %>">
                                          <div
                                            class="w-100 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
                                            <div>
                                              <strong>Order #<%= order.order_number || order.id %></strong>
                                              <span class="text-muted small ms-2">
                                                <%= new Date(order.created_at).toLocaleString() %>
                                              </span>
                                            </div>
                                            <div class="d-flex flex-wrap align-items-center gap-2">
                                              <span class="badge bg-light text-dark">Customer: <%= order.username %>
                                              </span>
                                              <span
                                                class="badge <%= order.delivery_method === 'delivery' ? 'bg-primary-subtle text-primary' : 'bg-light text-dark' %>">
                                                <%= order.delivery_method==='delivery' ? 'Delivery' : 'Pickup' %>
                                              </span>
                                              <span
                                                class="badge <%= statusClasses[order.status] || 'bg-light text-dark' %> text-uppercase">
                                                <%= order.status %>
                                              </span>
                                              <% const refundStatusRaw = order.refund_status ? String(order.refund_status).toLowerCase() : ''; %>
                                              <% const refundLabel = refundStatusRaw ? refundStatusRaw.charAt(0).toUpperCase() + refundStatusRaw.slice(1) : ''; %>
                                              <% const refundClasses = { pending: 'bg-warning-subtle text-warning', approved: 'bg-info-subtle text-info', completed: 'bg-success-subtle text-success', rejected: 'bg-danger-subtle text-danger', failed: 'bg-danger-subtle text-danger' }; %>
                                              <% if (refundStatusRaw) { %>
                                                <span class="badge <%= refundClasses[refundStatusRaw] || 'bg-secondary-subtle text-secondary' %> text-uppercase">Refund: <%= refundLabel %></span>
                                              <% } %>
                                              <span class="badge bg-dark-subtle text-dark">Total $<%= Number(order.total
                                                  || 0).toFixed(2) %></span>
                                            </div>
                                          </div>
                                        </button>
                                      </h2>
                                      <div id="order-<%= order.id %>"
                                        class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
                                        aria-labelledby="order-heading-<%= order.id %>" data-bs-parent="#admin-orders">
                                        <div class="accordion-body">
                                          <div class="row g-4">
                                            <div class="col-12 col-lg-4">
                                              <div class="card h-100 shadow-sm">
                                                <div class="card-body">
                                                  <h5 class="card-title mb-2">Customer</h5>
                                                  <p class="mb-1"><strong>
                                                      <%= order.first_name || '' %>
                                                        <%= order.last_name || '' %>
                                                    </strong></p>
                                                  <p class="text-muted mb-1">
                                                    <%= order.email %>
                                                  </p>
                                                  <p class="text-muted mb-3">
                                                    <%= order.phone || 'Phone not provided' %>
                                                  </p>
                                                  <p class="mb-2"><strong>Delivery address:</strong></p>
                                                  <p class="text-muted mb-0">
                                                    <%= order.delivery_address || 'Pickup (no delivery address).' %>
                                                  </p>
                                                </div>
                                              </div>
                                            </div>
                                            <div class="col-12 col-lg-8">
                                              <div class="card shadow-sm mb-3">
                                                <div class="card-body">
                                                  <div class="d-flex justify-content-between align-items-center mb-3">
                                                    <h5 class="mb-0">Items</h5>
                                                    <a href="/orders/<%= order.id %>/invoice" target="_blank"
                                                      rel="noopener" class="btn btn-outline-secondary btn-sm">View
                                                      invoice</a>
                                                  </div>
                                                  <% const items=orderItems[order.id] || []; %>
                                                    <% if (items.length) { %>
                                                      <div class="table-responsive">
                                                        <table class="table align-middle mb-0">
                                                          <thead>
                                                            <tr>
                                                              <th>Product</th>
                                                              <th>Size</th>
                                                              <th class="text-center">Qty</th>
                                                              <th class="text-end">Price</th>
                                                            </tr>
                                                          </thead>
                                                          <tbody>
                                                            <% items.forEach(function(item) { %>
                                                              <tr>
                                                                <td>
                                                                  <%= item.productName %>
                                                                </td>
                                                                <td>
                                                                  <%= item.size || '-' %>
                                                                </td>
                                                                <td class="text-center">
                                                                  <%= item.quantity %>
                                                                </td>
                                                                <td class="text-end">$<%= Number(item.price).toFixed(2)
                                                                    %>
                                                                </td>
                                                              </tr>
                                                              <% }); %>
                                                          </tbody>
                                                        </table>
                                                      </div>
                                                      <% } else { %>
                                                        <p class="text-muted mb-0">No line items recorded.</p>
                                                        <% } %>
                                                </div>
                                              </div>

                                              <div class="card shadow-sm">
                                                <div class="card-body">
                                                  <h5 class="mb-3">Admin updates</h5>
                                                  <form action="/admin/orders/<%= order.id %>/update" method="POST"
                                                    class="row gy-3">
                                                    <div class="col-12 col-md-4">
                                                      <label class="form-label">Status</label>
                                                      <select name="status" class="form-select" <%=isCompleted
                                                        ? 'disabled' : '' %>>
                                                        <% if (!statusOptions.includes(order.status)) { %>
                                                          <option value="<%= order.status %>" selected disabled>
                                                            <%= order.status %>
                                                          </option>
                                                          <% } %>
                                                            <% statusOptions.forEach(function(status) { %>
                                                              <option value="<%= status %>" <%=order.status===status
                                                                ? 'selected' : '' %>><%= status %>
                                                              </option>
                                                              <% }); %>
                                                      </select>
                                                    </div>
                                                    <div class="col-12 col-md-4">
                                                      <label class="form-label">Delivery method</label>
                                                      <select name="deliveryMethod" class="form-select" <%=isCompleted
                                                        ? 'disabled' : '' %>>
                                                        <option value="pickup" <%=order.delivery_method==='pickup'
                                                          ? 'selected' : '' %>>Pickup</option>
                                                        <option value="delivery" <%=order.delivery_method==='delivery'
                                                          ? 'selected' : '' %>>Delivery</option>
                                                      </select>
                                                    </div>
                                                    <div class="col-12 col-md-4">
                                                      <label class="form-label">Estimated delivery date</label>
                                                      <input type="date" class="form-control" name="estDeliveryDate"
                                                        value="<%= order.est_delivery_date ? new Date(order.est_delivery_date).toISOString().slice(0,10) : '' %>"
                                                        <%=isCompleted ? 'disabled' : '' %>>
                                                    </div>
                                                    <div class="col-12">
                                                      <label class="form-label">Delivery address</label>
                                                      <textarea class="form-control" name="deliveryAddress" rows="2"
                                                        <%=isCompleted ? 'disabled' : ''
                                                        %>><%= order.delivery_address || order.account_address || '' %></textarea>
                                                    </div>
                                                    <div class="col-12 col-md-6">
                                                      <label class="form-label">Shipping provider</label>
                                                      <input type="text" class="form-control" name="shippingProvider"
                                                        value="<%= order.shipping_provider || '' %>" <%=isCompleted
                                                        ? 'disabled' : '' %>>
                                                    </div>
                                                    <div class="col-12 col-md-6">
                                                      <label class="form-label">Tracking number</label>
                                                      <input type="text" class="form-control" name="trackingNumber"
                                                        value="<%= order.tracking_number || '' %>" <%=isCompleted
                                                        ? 'disabled' : '' %>>
                                                    </div>
                                                    <div class="col-12">
                                                      <label class="form-label">Admin notes</label>
                                                      <textarea class="form-control" name="adminNotes" rows="3"
                                                        <%=isCompleted ? 'disabled' : ''
                                                        %>><%= order.admin_notes || '' %></textarea>
                                                    </div>
                                                    <div
                                                      class="col-12 d-flex justify-content-between align-items-center">
                                                      <% if (isCompleted) { %>
                                                        <span class="text-success">This order is completed and
                                                          locked.</span>
                                                        <% } else { %>
                                                          <button type="submit" class="btn btn-outline-primary">Save
                                                            changes</button>
                                                          <% } %>
                                                    </div>
                                                  </form>

                                                  <% if (order.status==='delivered' && !isCompleted) { %>
                                                    <form action="/admin/orders/<%= order.id %>/update" method="POST"
                                                      class="mt-3">
                                                      <input type="hidden" name="status" value="completed">
                                                      <input type="hidden" name="deliveryMethod"
                                                        value="<%= order.delivery_method %>">
                                                      <input type="hidden" name="deliveryAddress"
                                                        value="<%= order.delivery_address || order.account_address || '' %>">
                                                      <input type="hidden" name="shippingProvider"
                                                        value="<%= order.shipping_provider || '' %>">
                                                      <input type="hidden" name="trackingNumber"
                                                        value="<%= order.tracking_number || '' %>">
                                                      <input type="hidden" name="estDeliveryDate"
                                                        value="<%= order.est_delivery_date ? new Date(order.est_delivery_date).toISOString().slice(0,10) : '' %>">
                                                      <input type="hidden" name="adminNotes"
                                                        value="<%= order.admin_notes || '' %>">
                                                      <button type="submit" class="btn btn-success">Mark as
                                                        completed</button>
                                                    </form>
                                                    <% } %>
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <% }); %>
                              </div>
                              <% } %>
        </div>
      </section>

      <%- include('partials/footer') %>
